{% trans_default_domain 'FOSUserBundle' %}



<div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button><h4 class="modal-title">Edit Profile</h4></div>
            <div class="modal-body"><h6>Change your Information !</h6>
				<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
			    {# Les erreurs générales du formulaire. #}
			    {{ form_errors(form) }}
			    <div class="form-group">
			      {{ form_errors(form.firstname) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.firstname, {'attr': {'class': 'form-control','placeholder':'Firstname'}}) }}
			      </div>
			    </div><br>
			  
			   <div class="form-group ">
			      {{ form_errors(form.lastname) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.lastname, {'attr': {'class': 'form-control','placeholder':'Lastname'}}) }}
			      </div>
			    </div><br>

			    <div class="form-group">
			      {{ form_errors(form.birth) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.birth, {'attr': {'class': ''}}) }}
			      </div>
			    </div><br>


			    <div class="form-group">
			      {{ form_errors(form.phone) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.phone, {'attr': {'class': 'form-control','placeholder':'Phone Number'}}) }}
			      </div>
			    </div><br>

			    <div class="form-group">
			      {{ form_errors(form.location) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.location, {'attr': {'class': 'form-control','placeholder':'Country'}}) }}
			      </div>
			    </div><br>

			    <div class="form-group">
			      {{ form_errors(form.bio) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.bio, {'attr': {'class': 'form-control','placeholder':'Presentation'}}) }}
			      </div>
			    </div><br>


				<div class="form-group">
			      {{ form_errors(form.email) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'E-mail'}}) }}
			      </div>
			    </div><br>


			     <div class="form-group">
			      {{ form_errors(form.current_password) }}
			      <div class="col-sm-12">
			        {{ form_widget(form.current_password, {'attr': {'class': 'form-control','placeholder':'Type your password'}}) }}
			      </div>
			    </div><br>
			    <p></p>
    		</div>	
            <div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <input  class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}"/></div>
				{{ form_rest(form) }}
			</form>
        
    </div>
</div>