<script>
  
  $(document).ready(function(){

        $("a[href^='#']").click(function (e) {
    // On annule le comportement initial au cas ou la base soit diff√©rente de la page courante.
    e.preventDefault(); 
        
    // On ajoute le hash dans l'url.
    window.location.hash = $(this).attr("href");
    
    // Une fois en place on va forcer l'affichage 40 pixels plus haut.
    $(window).scrollTop( $(window).scrollTop() - 40 );
  });

        if(window.location.hash == '#collapseOne'){$('#collapseOne').collapse('show');}
