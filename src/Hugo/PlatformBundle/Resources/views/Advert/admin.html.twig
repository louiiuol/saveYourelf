      <div>
        <h1>Add an object</h1>
        <div style="border-radius:0" class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          {# Les erreurs générales du formulaire. #}
          {{ form_errors(form) }}
          <div class="form-group">
            {{ form_label(form.name, "Name of object", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-4">
              {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>

          <div class="form-group">
            {{ form_label(form.imageobj, "Picture", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.imageobj) }}
            <div class="col-sm-4">
              {{ form_widget(form.imageobj, {'attr': {'class': ''}}) }}
            </div>
          </div>


          <div class="form-group">
            {{ form_label(form.categories, "Categories", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.categories) }}
            <div class="col-sm-6">
              {{ form_widget(form.categories, {'attr': {'class': ''}}) }}
            </div>
          </div>

          {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

          {{ form_rest(form) }}
          {{ form_end(form) }}
        </div>


      </div>


