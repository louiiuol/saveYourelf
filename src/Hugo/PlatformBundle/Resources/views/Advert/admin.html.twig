              {% endfor %}
            </ul>
        </div>
        <div class="container col-xs-4">
           <h1>Savies</h1>
           <ul>
              {% for advert in listAdverts %}
                <li>
                  <a href="{{ path('hugo_platform_view', {'slug': advert.slug}) }}">
                    {{ advert.title }}
                  </a>
                  by <a href="{{ path('fos_user_profile_show_name', {'username': advert.author}) }}">
                     {{ advert.author }}</a>,
                  the {{ advert.date|date('d/m/Y') }}
                  {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('hugo_platform_edit', {'slug': advert.slug}) }}">
                      <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="{{ path('hugo_platform_delete', {'slug': advert.slug}) }}">
                      <i class="glyphicon glyphicon-trash"></i>
                    </a>
                {% endif %}
                </li>
              {% else %}
                <li>No savies (yet!)</li>
              {% endfor %}
            </ul>
        </div>
